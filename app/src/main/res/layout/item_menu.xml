<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/fragment_menu_item_bg"
              android:orientation="vertical"
              android:layout_width="@dimen/setting_label_width_91"
              android:layout_height="@dimen/setting_item_height_91"
              android:gravity="center"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:gravity="center"
               android:id="@+id/iv_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

    <TextView android:textSize="@dimen/sp16"
              android:textStyle="italic"
              android:textColor="#ff5c5c5c"
              android:gravity="bottom|center"
              android:id="@+id/txt_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

</LinearLayout>